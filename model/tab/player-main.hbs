<div class="flex row full">
    
	<div class="flex column left-block">
    <div class="flex column heavy-border" style="width: 98%;">
	
        <b class="title">{{localize "HEADER.ATTRIBUTES"}} & {{localize "HEADER.SKILLS"}}</b>
		
        <div class="flex row wrap">
            <div class="skills physique flex column">
				<div class="attribute flex row align-center" data-key="physique">
					<b class="header">{{localize "ATTRIBUTE.PHYSIQUE"}}</b>			
				<input name="system.attribute.physique.value" type="text" value="{{system.attribute.physique.value}}" data-dtype="Number"/>
               
				</div>
				<div class="skill-group">
				{{#each system.skill as |skill key|}}
                    {{#if skill.hasPhysique}}
                        <div class="skill flex row align-center" data-key="{{key}}">
                            <b>{{localize skill.label}}</b>
							
                            <input name="system.skill.{{key}}.value" type="text" value="{{skill.value}}" data-dtype="Number"/>
							
						</div>
                    {{/if}}
                {{/each}}
				</div>
            </div>
            <div class="skills logic flex column">
				<div class="attribute flex row align-center" data-key="logic">
                <b class="header">{{localize "ATTRIBUTE.LOGIC"}}</b>
                <div class="roll-fear" data-key="logic"><img src="systems/vaesen/asset/warlock-eye.svg" class="icon" width="32" height="32" title="{{localize "FEAR_ROLL"}}"/></div>
				<input name="system.attribute.logic.value" type="text" value="{{system.attribute.logic.value}}" data-dtype="Number"/>
                </div>
				<div class="skill-group">
				{{#each system.skill as |skill key|}}
                    {{#if skill.hasLogic}}
                        <div class="skill flex row align-center" data-key="{{key}}">
                            <b>{{localize skill.label}}</b>
                            <input name="system.skill.{{key}}.value" type="text" value="{{skill.value}}" data-dtype="Number"/>
                        </div>
                    {{/if}}
                {{/each}}
				</div>
            </div>
		</div>
	<div class="flex row wrap">
            <div class="skills precision flex column">
                
				<div class="attribute flex row align-center" data-key="precision">
                <b class="header">{{localize "ATTRIBUTE.PRECISION"}}</b>
				<input name="system.attribute.precision.value" type="text" value="{{system.attribute.precision.value}}" data-dtype="Number"/>
                </div>
				<div class="skill-group">
                {{#each system.skill as |skill key|}}
                {{#if skill.hasPrecision}}
				
                <div class="skill flex row align-center" data-key="{{key}}">
                    <b>{{localize skill.label}}</b>
                    <input name="system.skill.{{key}}.value" type="text" value="{{skill.value}}" data-dtype="Number"/>
                </div>
                {{/if}}
                {{/each}}
				</div>
            </div>
            <div class="skills empathy flex column">
				<div class="attribute flex row align-center" data-key="empathy">
                <b class="header">{{localize "ATTRIBUTE.EMPATHY"}}</b>
                <div class="roll-fear" data-key="empathy"><img src="systems/vaesen/asset/warlock-eye.svg" class="icon" width="32" height="32" title="{{localize "FEAR_ROLL"}}"/></div>
				<input name="system.attribute.empathy.value" type="text" value="{{system.attribute.empathy.value}}" data-dtype="Number"/>
                </div>
                <div class="skill-group">
                {{#each system.skill as |skill key|}}
                    {{#if skill.hasEmpathy}}
                        <div class="skill flex row align-center" data-key="{{key}}">
                            <b>{{localize skill.label}}</b>
                            <input name="system.skill.{{key}}.value" type="text" value="{{skill.value}}" data-dtype="Number"/>
                        </div>
                    {{/if}}
                {{/each}}
				</div>
            </div>
        </div>
    </div>

    <div class="flex column heavy-border" style="width: 98%;">
        <b class="title">{{localize "HEADER.CONDITIONS"}}</b>
        <div class="flex row grow margin">
            <div class="conditions physical flex column" data-key="physical">
                <b class="header">{{localize "CONDITION.PHYSICAL"}} <a class="roll-recovery" title='{{localize  "UI.ROLL.PREC"}}'><i class="fas fa-dice-d6"></i></a> </b>
                <div class="flex column grow center wrap">
                    {{#each system.condition.physical.states as |condition key|}}
                    <div class="flex row grow">
                        {{#if condition.isChecked}}
                            <div class="condition active" data-key="{{key}}">{{localize condition.label}} <img src="systems/vaesen/asset/checked.png" width=15px style="border:none; float:right;"/></div>
                        {{else}}
                            <div class="condition" data-key="{{key}}">{{localize condition.label}} <img src="systems/vaesen/asset/not_checked.png" width=15px style="border:none; float:right;"/></div>
                        {{/if}}
                    </div>
                    {{/each}}
                    <div class="flex row grow">
                    {{#if system.condition.physical.isBroken}}
                        <div class="condition active" data-key="physical">{{localize "CONDITION.BROKEN"}} <img src="systems/vaesen/asset/checked.png" width=15px style="border:none; float:right;"/></div>
                    {{else}}
                        <div class="condition" data-key="physical">{{localize "CONDITION.BROKEN"}} <img src="systems/vaesen/asset/not_checked.png" width=15px style="border:none; float:right;"/></div>
                    {{/if}}
                    </div>
                </div>
            </div>
            <div class="conditions mental flex column" data-key="mental">
                <b class="header">{{localize "CONDITION.MENTAL"}} <a class="roll-recovery" title='{{localize  "UI.ROLL.MREC"}}'><i class="fas fa-dice-d6"></i></a> </b>
                <div class="flex column grow center wrap">
                    {{#each system.condition.mental.states as |condition key|}}
                    <div class="flex row grow">
                        {{#if condition.isChecked}}
                            <div class="condition active" data-key="{{key}}">{{localize condition.label}} <img src="systems/vaesen/asset/checked.png" width=15px style="border:none; float:right;"/></div>
                        {{else}}
                            <div class="condition" data-key="{{key}}">{{localize condition.label}} <img src="systems/vaesen/asset/not_checked.png" width=15px style="border:none; float:right;"/></div>
                        {{/if}}
                    </div>
                    {{/each}}
                    <div class="flex row grow">
                    {{#if system.condition.mental.isBroken}}
                        <div class="condition active" data-key="mental">{{localize "CONDITION.BROKEN"}}<img src="systems/vaesen/asset/checked.png" width=15px style="border:none; float:right;"/></div>
                    {{else}}
                        <div class="condition" data-key="mental">{{localize "CONDITION.BROKEN"}} <img src="systems/vaesen/asset/not_checked.png" width=15px style="border:none; float:right;"/></div>
                    {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
	</div>
	<div class="flex column heavy-border right-block">
	{{> systems/vaesen/model/tab/player-favorites.hbs}}
	</div>
</div>