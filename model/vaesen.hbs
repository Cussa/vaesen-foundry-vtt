<form class="{{cssClass}}" autocomplete="off">
  <div class="monster flex column">
    <div class="flex row">
      <div class="header flex column fit-height right">
        <div class="flex column heavy-border wrapper">
          <div class="name">
            <input
              name="name"
              type="text"
              value="{{actor.name}}"
              style="width: 95%; margin: auto"
            />
          </div>
          <img
            class="profile-img"
            src="{{actor.img}}"
            data-edit="img"
            title="{{actor.name}}"
            height="125"
            width="125"
          />
          <div class="flex column grow wrap" style="margin-left: 5px">
            <div class="initial">
              <b>{{localize "FEAR.INITIAL"}}</b>
              <input
                name="system.fear.initial"
                type="text"
                value="{{system.fear.initial}}"
                data-dtype="Number"
              />
            </div>
            <div class="subsequent">
              <b>{{localize "FEAR.SUBSEQUENT"}}</b>
              <input
                name="system.fear.subsequent"
                type="text"
                value="{{system.fear.subsequent}}"
                data-dtype="Number"
              />
            </div>
          </div>
        </div>

        <div class="flex column heavy-border wrapper">
          <b class="title" style="width: 95%; margin: auto"
            >{{localize "HEADER.ARMORS"}}</b
          >
          <div class="armors flex column margin grow">
            <div class="armor flex row center light-border w-100">
              <b class="icon">{{localize "ARMOR.ICON"}}</b>
              <b class="name">{{localize "ARMOR.NAME"}}</b>
              <a
                class="button item-create"
                title='{{localize  "UI.ADD"}}'
                data-type="armor"
                ><i class="fas fa-plus"></i
              ></a>
            </div>
            <div class="scrollable">
              {{#each items as |item|}} {{#if item.isArmor}}
              <div
                class="armor item flex column center align-center"
                data-item-id="{{item._id}}"
              >
                <div
                  class="flex row center space-between grow"
                  style="width: 100%"
                >
                  <img
                    class="icon"
                    src="{{item.img}}"
                    title="{{item.name}}"
                    height="25"
                    width="25"
                  />
                  <div class="name">{{item.name}}</div>
                  <div class="button">
                    <a class="item-control to-chat" title="{{localize UI.CHAT}}"
                      ><i class="fas fa-comment"></i
                    ></a>
                    <a
                      class="item-control item-edit"
                      title='{{localize  "UI.EDIT"}}'
                      ><i class="fas fa-edit"></i
                    ></a>
                    <a
                      class="item-control item-delete"
                      title='{{localize  "UI.DELETE"}}'
                      ><i class="fas fa-trash"></i
                    ></a>
                  </div>
                </div>
              </div>
              {{/if}} {{/each}}
            </div>
          </div>
        </div>

        <div class="flex column heavy-border wrapper">
          <b class="title" style="width: 95%; margin: auto"
            >{{localize "HEADER.ATTACK"}}</b
          >
          <div class="attacks flex column margin grow">
            <div class="attack flex row center light-border w-100">
              <b class="icon">{{localize "ATTACK.ICON"}}</b>
              <b class="name">{{localize "ATTACK.NAME"}}</b>
              <a
                class="button item-create"
                title='{{localize  "UI.ADD"}}'
                data-type="attack"
                ><i class="fas fa-plus"></i
              ></a>
            </div>
            <div class="scrollable">
              {{#each items as |item|}} {{#if item.isAttack}}
              <div
                class="attack item flex column center align-center"
                data-item-id="{{item._id}}"
              >
                <div
                  class="flex row center space-between grow"
                  style="width: 100%"
                >
                  <img
                    class="icon"
                    src="{{item.img}}"
                    title="{{item.name}}"
                    height="25"
                    width="25"
                  />
                  <div class="name">{{item.name}}</div>
                  <div class="button">
                    <a class="item-control to-chat" title="{{localize UI.CHAT}}"
                      ><i class="fas fa-comment"></i
                    ></a>
                    <a
                      class="item-control item-edit"
                      title='{{localize  "UI.EDIT"}}'
                      ><i class="fas fa-edit"></i
                    ></a>
                    <a
                      class="item-control item-delete"
                      title='{{localize  "UI.DELETE"}}'
                      ><i class="fas fa-trash"></i
                    ></a>
                  </div>
                </div>
              </div>
              {{/if}} {{/each}}
            </div>
          </div>
        </div>

        <div class="flex column heavy-border wrapper">
          <b class="title" style="width: 95%; margin: auto"
            >{{localize "HEADER.GEAR"}}</b
          >
          <div class="gears flex column margin grow">
            <div class="gear flex row center light-border w-100">
              <b class="icon">{{localize "GEAR.ICON"}}</b>
              <b class="name">{{localize "GEAR.NAME"}}</b>
              <a
                class="button item-create"
                title='{{localize  "UI.ADD"}}'
                data-type="gear"
                ><i class="fas fa-plus"></i
              ></a>
            </div>
            <div class="scrollable">
              {{#each items as |item|}} {{#if item.isGear}}
              <div
                class="gear item flex column center align-center"
                data-item-id="{{item._id}}"
              >
                <div
                  class="flex row center space-between grow"
                  style="width: 100%"
                >
                  <img
                    class="icon"
                    src="{{item.img}}"
                    title="{{item.name}}"
                    height="25"
                    width="25"
                  />
                  <div class="name">{{item.name}}</div>
                  <div class="button">
                    <a class="item-control to-chat" title="{{localize UI.CHAT}}"
                      ><i class="fas fa-comment"></i
                    ></a>
                    <a
                      class="item-control item-edit"
                      title='{{localize  "UI.EDIT"}}'
                      ><i class="fas fa-edit"></i
                    ></a>
                    <a
                      class="item-control item-delete"
                      title='{{localize  "UI.DELETE"}}'
                      ><i class="fas fa-trash"></i
                    ></a>
                  </div>
                </div>
              </div>
              {{/if}} {{/each}}
            </div>
          </div>
        </div>
      </div>

      <div class="header flex column left">
        <div
          class="header flex column heavy-border fit-height"
          style="width: 97%"
        >
          <b class="title">{{localize "HEADER.ATTRIBUTES"}}</b>
          <div
            class="attributes flex row grow space-between"
            style="width: 99%"
          >
            {{#each system.attribute as |attribute key|}}
            <div class="attribute flex column center" data-key="{{key}}">
              <b>{{localize attribute.label}}</b>
              <div class="flex row align-center">
                <input
                  name="system.attribute.{{key}}.value"
                  type="text"
                  value="{{attribute.value}}"
                  data-dtype="Number"
                />
              </div>
            </div>
            {{/each}}
          </div>
        </div>

        <div class="sheet-tabs tabs flex row" data-group="primary">
          <b class="item" data-tab="main">{{localize "TAB.MAIN"}}</b>
          <b class="item" data-tab="note">{{localize "HEADER.NOTES"}}</b>
        </div>
        <div class="sheet-body flex row">
          <div class="tab" data-group="primary" data-tab="main">
            {{> systems/vaesen/model/tab/vaesen-main.hbs}}
          </div>
          <div class="tab note" data-group="primary" data-tab="note">
            {{> systems/vaesen/model/tab/vaesen-note.hbs}}
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
